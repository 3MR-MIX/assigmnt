      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:test"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Search">

    <Grid Background="Aquamarine">
        <Grid.RowDefinitions>
            <RowDefinition Height="107*"/>
            <RowDefinition Height="118*"/>
        </Grid.RowDefinitions>


        <TextBox Style="{StaticResource text}" x:Name="t1" HorizontalAlignment="Left" Margin="336,54,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="37" Width="197" />
        <Button Content="Search" HorizontalAlignment="Left" Margin="160,58,0,0" VerticalAlignment="Top" Height="30" Width="122" Click="Button_Click" FontSize="20" FontWeight="Bold" Background="#FF00DBFF"/>
        <DataGrid x:Name="dg" Grid.Row="1" ></DataGrid>

    </Grid>
</Page>
